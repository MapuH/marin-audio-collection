<div class="container-fluid">
  <div class="row">
  	<div class="text-center">
	    <h1>Listing Albums</h1>
		<p class="lead">Won't use <a href="http://haml.info" target="_blank">HAML</a> at this stage!</p>
	</div>
  </div>
</div>

<div class="container">
	<% @albums.each do |album| %>
	<div class="row">
		<div class="col-md-6">
			<h3><%= album.title %></h3>
			<p>Artist: <%= album.artist %></p>
			<p>Released: <%= album.year %></p>
			<p>Style: <%= album.genre %></p>
			<p>Tracks: <%= album.tracks_num %></p>
			<p>Label: <%= album.label %></p>
		</div>
		<div class="col-md-6">
			<div class="center-block"><%= link_to image_tag(album.image, :class => "img-responsive"), album_path(album) %></div>
		</div>
	</div>
	<% end %>
</div>